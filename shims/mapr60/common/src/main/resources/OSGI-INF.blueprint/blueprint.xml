<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="
            http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

  <bean id="mapr60Hadoop" class="org.pentaho.hadoop.shim.mapr60.HadoopShim" scope="singleton"/>
  <service ref="mapr60Hadoop" interface="org.pentaho.hadoop.shim.spi.HadoopShim">
    <service-properties>
      <entry key="shim">
        <value type="java.lang.String">mapr60</value>
      </entry>
    </service-properties>
  </service>

  <bean id="hadoopFileSystem" class="com.pentaho.big.data.bundles.impl.shim.hdfs.HadoopFileSystemFactoryImpl">
    <argument ref="mapr60Hadoop"/>
  </bean>

  <service ref="hadoopFileSystem" interface="org.pentaho.bigdata.api.hdfs.HadoopFileSystemFactory"/>

  <bean id="mapr60SqoopShim" class="org.pentaho.hadoop.shim.common.sqoop.CommonSqoopShim">
    <property name="bundleContext" ref="blueprintBundleContext" />
  </bean>

  <service ref="mapr60SqoopShim" auto-export="interfaces">
    <service-properties>
      <entry key="shim">
        <value type="java.lang.String">mapr60</value>
      </entry>
      <entry key="service">
        <value type="java.lang.String">sqoop</value>
      </entry>
    </service-properties>
  </service>

  <bean id="mapr60SqoopServiceFactory" class="org.pentaho.big.data.impl.shim.sqoop.SqoopServiceFactoryImpl">
    <argument ref="mapr60Hadoop"/>
    <argument ref="mapr60SqoopShim"/>
  </bean>

  <service ref="mapr60SqoopServiceFactory"
           interface="org.pentaho.big.data.api.cluster.service.locator.NamedClusterServiceFactory">
    <service-properties>
      <entry key="shim">
        <value type="java.lang.String">mapr60</value>
      </entry>
      <entry key="service">
        <value type="java.lang.String">sqoop</value>
      </entry>
    </service-properties>
  </service>


  <bean id="mapr60PigShim" class="org.pentaho.hadoop.shim.common.pig.PigShimImpl">
    <property name="bundleContext" ref="blueprintBundleContext"/>
  </bean>

  <service ref="mapr60PigShim" auto-export="interfaces">
    <service-properties>
      <entry key="shim">
        <value type="java.lang.String">mapr60</value>
      </entry>
      <entry key="service">
        <value type="java.lang.String">pig</value>
      </entry>
    </service-properties>
  </service>

  <bean id="mapr60PigServiceFactory" class="org.pentaho.big.data.impl.shim.pig.PigServiceFactoryImpl">
    <argument ref="mapr60Hadoop"/>
    <argument ref="mapr60PigShim"/>
  </bean>

  <service ref="mapr60PigServiceFactory"
           interface="org.pentaho.big.data.api.cluster.service.locator.NamedClusterServiceFactory">
    <service-properties>
      <entry key="shim">
        <value type="java.lang.String">mapr60</value>
      </entry>
      <entry key="service">
        <value type="java.lang.String">pig</value>
      </entry>
    </service-properties>
  </service>

  <bean id="mapr60FormatShim" class="org.pentaho.hadoop.shim.common.CommonFormatShim"/>

  <service ref="mapr60FormatShim" auto-export="interfaces">
    <service-properties>
      <entry key="shim">
        <value type="java.lang.String">mapr60</value>
      </entry>
      <entry key="service">
        <value type="java.lang.String">format</value>
      </entry>
    </service-properties>
  </service>

  <bean id="mapr60FormatServiceFactory" class="org.pentaho.big.data.impl.shim.format.FormatServiceFactory">
    <argument ref="mapr60FormatShim"/>
  </bean>

  <service ref="mapr60FormatServiceFactory"
           interface="org.pentaho.big.data.api.cluster.service.locator.NamedClusterServiceFactory">
    <service-properties>
      <entry key="shim">
        <value type="java.lang.String">mapr60</value>
      </entry>
      <entry key="service">
        <value type="java.lang.String">format</value>
      </entry>
    </service-properties>
  </service>

  <bean id="mapr60MapReduceServiceFactory" class="org.pentaho.big.data.impl.shim.mapreduce.MapReduceServiceFactoryImpl">
    <argument ref="mapr60Hadoop"/>
    <argument ref="executorService"/>
    <argument ref="transformationVisitorList"/>
  </bean>
  <reference id="executorService" interface="java.util.concurrent.ExecutorService"/>

  <service ref="mapr60MapReduceServiceFactory" interface="org.pentaho.big.data.api.cluster.service.locator.NamedClusterServiceFactory">
    <service-properties>
      <entry key="shim">
        <value type="java.lang.String">mapr60</value>
      </entry>
      <entry key="service">
        <value type="java.lang.String">mapreduce</value>
      </entry>
    </service-properties>
  </service>
  <reference-list id="transformationVisitorList" interface="org.pentaho.bigdata.api.mapreduce.TransformationVisitorService"
                  availability="optional"/>
  <!--<reference id="mapr60HadoopConfiguration" interface="org.pentaho.hadoop.shim.api.HadoopConfigurationInterface"/>-->

</blueprint>