<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="
            http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

  <bean id="hdp25Hadoop" class="org.pentaho.hadoop.shim.hdp25.HadoopShim" scope="singleton"/>
  <service ref="hdp25Hadoop" interface="org.pentaho.hadoop.shim.spi.HadoopShim">
    <service-properties>
      <entry key="shim">
        <value type="java.lang.String">hdp25</value>
      </entry>
    </service-properties>
  </service>

  <bean id="hadoopFileSystem" class="com.pentaho.big.data.bundles.impl.shim.hdfs.HadoopFileSystemFactoryImpl">
    <argument ref="hdp25Hadoop"/>
  </bean>

  <service ref="hadoopFileSystem" interface="org.pentaho.bigdata.api.hdfs.HadoopFileSystemFactory"/>

  <bean id="hdp25FormatShim" class="org.pentaho.hadoop.shim.common.CommonFormatShim"/>

  <service ref="hdp25FormatShim" auto-export="interfaces">
    <service-properties>
      <entry key="shim">
        <value type="java.lang.String">hdp25</value>
      </entry>
      <entry key="service">
        <value type="java.lang.String">format</value>
      </entry>
    </service-properties>
  </service>

  <bean id="hdp25FormatServiceFactory" class="org.pentaho.big.data.impl.shim.format.FormatServiceFactory">
    <argument ref="hdp25FormatShim"/>
  </bean>

  <service ref="hdp25FormatServiceFactory"
           interface="org.pentaho.big.data.api.cluster.service.locator.NamedClusterServiceFactory">
    <service-properties>
      <entry key="shim">
        <value type="java.lang.String">hdp25</value>
      </entry>
      <entry key="service">
        <value type="java.lang.String">format</value>
      </entry>
    </service-properties>
  </service>

</blueprint>
