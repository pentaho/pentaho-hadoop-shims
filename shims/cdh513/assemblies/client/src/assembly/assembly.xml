<?xml version="1.0" encoding="UTF-8"?>
<assembly>
  <id>plugin</id>
  <baseDirectory>cdh513</baseDirectory>
  <formats>
    <format>zip</format>
  </formats>
  <dependencySets>
    <dependencySet>
      <outputDirectory>lib/client</outputDirectory>
      <useTransitiveDependencies>true</useTransitiveDependencies>
