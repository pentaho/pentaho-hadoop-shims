  <artifactId>pentaho-hadoop-shims-cdh513-common</artifactId>
  <version>8.1.0.0-SNAPSHOT</version>
  <packaging>bundle</packaging>
  <dependencies>
    <dependency>
      <groupId>org.xerial.snappy</groupId>
      <artifactId>snappy-java</artifactId>
