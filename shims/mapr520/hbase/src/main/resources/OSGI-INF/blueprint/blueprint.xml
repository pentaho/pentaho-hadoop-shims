<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="
            http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

  <bean id="hbaseShim" class="org.pentaho.hbase.shim.common.CommonHBaseShim"/>
  <service ref="hbaseShim" auto-export="interfaces">
    <service-properties>
      <entry key="shim">
        <value type="java.lang.String">mapr520</value>
      </entry>
      <entry key="service">
        <value type="java.lang.String">hbase</value>
      </entry>
    </service-properties>
  </service>

  <bean id="mapr520HBaseServiceFactory" class="com.pentaho.big.data.bundles.impl.shim.hbase.HBaseServiceFactory">
    <argument ref="hbaseShim"/>
  </bean>

  <service ref="mapr520HBaseServiceFactory"
           interface="org.pentaho.hadoop.shim.api.cluster.NamedClusterServiceFactory">
    <service-properties>
      <entry key="shim">
        <value type="java.lang.String">mapr520</value>
      </entry>
      <entry key="service">
        <value type="java.lang.String">hbase</value>
      </entry>
    </service-properties>
  </service>
</blueprint>
