<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="
            http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

  <bean id="mapr520Hadoop" class="org.pentaho.hadoop.shim.mapr520.HadoopShim" scope="singleton"/>
  <service ref="mapr520Hadoop" interface="org.pentaho.hadoop.shim.spi.HadoopShim">
    <service-properties>
      <entry key="shim">
        <value type="java.lang.String">mapr520</value>
      </entry>
    </service-properties>
  </service>

  <bean id="hadoopFileSystem" class="com.pentaho.big.data.bundles.impl.shim.hdfs.HadoopFileSystemFactoryImpl">
    <argument ref="mapr520Hadoop"/>
  </bean>

  <service ref="hadoopFileSystem" interface="org.pentaho.bigdata.api.hdfs.HadoopFileSystemFactory"/>

  <bean id="mapr520SqoopShim" class="org.pentaho.hadoop.shim.common.sqoop.CommonSqoopShim">
    <property name="bundleContext" ref="blueprintBundleContext" />
  </bean>

  <service ref="mapr520SqoopShim" auto-export="interfaces">
    <service-properties>
      <entry key="shim">
        <value type="java.lang.String">mapr520</value>
      </entry>
      <entry key="service">
        <value type="java.lang.String">sqoop</value>
      </entry>
    </service-properties>
  </service>

  <bean id="mapr520SqoopServiceFactory" class="org.pentaho.big.data.impl.shim.sqoop.SqoopServiceFactoryImpl">
    <argument ref="mapr520Hadoop"/>
    <argument ref="mapr520SqoopShim"/>
  </bean>

  <service ref="mapr520SqoopServiceFactory"
           interface="org.pentaho.hadoop.shim.api.cluster.NamedClusterServiceFactory">
    <service-properties>
      <entry key="shim">
        <value type="java.lang.String">mapr520</value>
      </entry>
      <entry key="service">
        <value type="java.lang.String">sqoop</value>
      </entry>
    </service-properties>
  </service>


  <bean id="mapr520PigShim" class="org.pentaho.hadoop.shim.common.pig.PigShimImpl">
    <property name="bundleContext" ref="blueprintBundleContext"/>
  </bean>

  <service ref="mapr520PigShim" auto-export="interfaces">
    <service-properties>
      <entry key="shim">
        <value type="java.lang.String">mapr520</value>
      </entry>
      <entry key="service">
        <value type="java.lang.String">pig</value>
      </entry>
    </service-properties>
  </service>

  <bean id="mapr520PigServiceFactory" class="org.pentaho.big.data.impl.shim.pig.PigServiceFactoryImpl">
    <argument ref="mapr520Hadoop"/>
    <argument ref="mapr520PigShim"/>
  </bean>

  <service ref="mapr520PigServiceFactory"
           interface="org.pentaho.hadoop.shim.api.cluster.NamedClusterServiceFactory">
    <service-properties>
      <entry key="shim">
        <value type="java.lang.String">mapr520</value>
      </entry>
      <entry key="service">
        <value type="java.lang.String">pig</value>
      </entry>
    </service-properties>
  </service>

  <bean id="mapr520FormatShim" class="org.pentaho.hadoop.shim.common.CommonFormatShim"/>

  <service ref="mapr520FormatShim" auto-export="interfaces">
    <service-properties>
      <entry key="shim">
        <value type="java.lang.String">mapr520</value>
      </entry>
      <entry key="service">
        <value type="java.lang.String">format</value>
      </entry>
    </service-properties>
  </service>

  <bean id="mapr520FormatServiceFactory" class="org.pentaho.big.data.impl.shim.format.FormatServiceFactory">
    <argument ref="mapr520FormatShim"/>
  </bean>

  <service ref="mapr520FormatServiceFactory"
           interface="org.pentaho.hadoop.shim.api.cluster.NamedClusterServiceFactory">
    <service-properties>
      <entry key="shim">
        <value type="java.lang.String">mapr520</value>
      </entry>
      <entry key="service">
        <value type="java.lang.String">format</value>
      </entry>
    </service-properties>
  </service>

  <bean id="mapr520MapReduceServiceFactory" class="org.pentaho.big.data.impl.shim.mapreduce.MapReduceServiceFactoryImpl">
    <argument ref="mapr520Hadoop"/>
    <argument ref="executorService"/>
    <argument ref="transformationVisitorList"/>
  </bean>
  <reference id="executorService" interface="java.util.concurrent.ExecutorService"/>

  <service ref="mapr520MapReduceServiceFactory" interface="org.pentaho.hadoop.shim.api.cluster.NamedClusterServiceFactory">
    <service-properties>
      <entry key="shim">
        <value type="java.lang.String">mapr520</value>
      </entry>
      <entry key="service">
        <value type="java.lang.String">mapreduce</value>
      </entry>
    </service-properties>
  </service>
  <reference-list id="transformationVisitorList" interface="org.pentaho.bigdata.api.mapreduce.TransformationVisitorService"
                  availability="optional"/>
  <!--<reference id="mapr520HadoopConfiguration" interface="org.pentaho.hadoop.shim.api.HadoopConfigurationInterface"/>-->

</blueprint>
