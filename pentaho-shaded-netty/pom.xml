<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.pentaho</groupId>
    <artifactId>pentaho-hadoop-shims</artifactId>
    <version>11.1.0.0-108</version>
  </parent>

  <groupId>org.pentaho.hadoop.shims</groupId>
  <artifactId>pentaho-shaded-netty</artifactId>
  <packaging>jar</packaging>

  <name>Pentaho Shaded Netty (CVE-2025-59419 Fix)</name>
  <description>
    Shaded Netty 4.1.128.Final with package relocation for HBase compatibility.
    Fixes CVE-2025-59419 (SMTP injection vulnerability).
    
    Package relocation: io.netty.* -> org.apache.hadoop.hbase.thirdparty.io.netty.*
    
    This JAR replaces org.apache.hbase.thirdparty:hbase-shaded-netty:4.1.10
    which contains vulnerable Netty 4.1.116.Final.
  </description>

  <properties>
    <netty.version>4.1.128.Final</netty.version>
  </properties>

  <dependencies>
    <!-- Single fat JAR containing all Netty modules -->
    <dependency>
      <groupId>io.netty</groupId>
      <artifactId>netty-all</artifactId>
      <version>${netty.version}</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <!-- Maven Shade Plugin - Creates the shaded JAR with package relocation -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.6.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <!-- Don't create dependency-reduced-pom.xml -->
              <createDependencyReducedPom>true</createDependencyReducedPom>

              <!-- Include all classes from all netty modules -->
              <artifactSet>
                <includes>
                  <include>io.netty:*</include>
                </includes>
              </artifactSet>

              <!-- Package relocation rules -->
              <relocations>
                <relocation>
                  <!-- Relocate all io.netty.* classes -->
                  <pattern>io.netty</pattern>
                  <shadedPattern>org.apache.hbase.thirdparty.io.netty</shadedPattern>
                </relocation>
              </relocations>

              <!-- Transformer configurations -->
              <transformers>
                <!-- Merge service files (META-INF/services/*) -->
                <transformer implementation="org.apache.maven.plugins.shade.resource.ServicesResourceTransformer"/>

                <!-- Add manifest entries -->
                <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                  <manifestEntries>
                    <Implementation-Title>${project.name}</Implementation-Title>
                    <Implementation-Version>${project.version}</Implementation-Version>
                    <Implementation-Vendor>Pentaho</Implementation-Vendor>
                    <Shaded-Netty-Version>${netty.version}</Shaded-Netty-Version>
                    <CVE-Fix>CVE-2025-59419</CVE-Fix>
                  </manifestEntries>
                </transformer>
              </transformers>

              <!-- Filtering -->
              <filters>
                <filter>
                  <artifact>io.netty:netty-all</artifact>
                  <excludes>
                    <!-- Exclude signature files -->
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <!-- Generate sources JAR for IDE integration -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-sources</id>
            <goals>
              <goal>jar-no-fork</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
